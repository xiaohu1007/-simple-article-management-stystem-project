<!DOCTYPE html>
<html>
  <head>
    <title>首页</title>
    <%- include head %> 
  </head>
  <body>
    <%- include('bar', {username: username}) %> 

    <div class="container">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <th class="text-center">序号</th>
          <th class="text-center">用户名</th>
          <th class="text-center">文章标题</th>
          <th class="text-center">发布日期</th>
          <th class="text-center">
            <span>操作</span>
          </th>
        </thead>
        <% data.list.map(function (item, index) { %>
          <tbody>
            <tr>
              <td class="text-center"><%= index + 1 %></td>
              <td class="text-center"><%= item.username %></td>
              <td class="text-center"><a href="/detail?id=<%= item.id %>"><%= item.title %></a></td>
              <td class="text-center"><%= item.time %></td>
              <td class="text-center">
                <a href="/write?id=<%= item.id %>&page=<%= data.curPage %>">编辑</a>
                <a href="/article/delete?id=<%= item.id %>&page=<%= data.curPage %>">删除</a>
              </td>
            </tr>
          </tbody>
        <% }) %>
      </table>
      <div class="table text-right">
        <% for (let i = 1; i <= data.total; i++) { %>
          <a href="/?page=<%= i %>"><%= i %></a>
        <% } %>
      </div>
    </div>


  </body>
</html>
